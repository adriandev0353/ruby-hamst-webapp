<p>
  <strong>Owner: </strong>
  <%= @item.user_profile.username %>
</p>
<p>
  <strong>Item: </strong>
  <%= @item.item_name %>
</p>
<p>
  <strong>Category: </strong>
  <%= getCategoryName(@item.category_id) %>
</p>

<p>
  <strong><%= itemAvaiableMessage(@item.status) %></strong>
</p>



<% if @unlogin %>
  <%= link_to 'Borrow', new_item_borrow_request_path(:item_id=>@item.id)%> | 
  <%= link_to 'Back', items_path %>
<% else %>
  <%= link_to 'Edit', edit_user_profile_item_path %> |
  <% if !(@borrow_request.nil?)%>
    <%= link_to 'RequestList', item_borrow_request_path(:item_id=>@item.id,:id=>@borrow_request.id)%> |
  <% end %>
   <td><%= link_to 'Remove', user_profile_item_path(:id=>item.id),
              method: :delete,
	      data: { confirm: 'Are you sure?'} %></td>
  <%= link_to 'Back', user_profile_items_path %> 
<% end %>
