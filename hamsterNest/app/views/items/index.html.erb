<h1>Items</h1>
<body>
<% if !@unlogin%>
  <%= link_to 'New item', new_user_profile_item_path() %>
<% end %>
<table>
  <tr>
     <th>Item Name</th> 
    <th><%= sort_link(@search, :item_name, 'Item Name', default_order: :desc) %></th>
    <th><%= sort_link(@search, :category_id, 'Category', default_order: :desc) %></th>
    <th><%= sort_link(@search, :quantity, 'Quantity', default_order: :desc) %></th>
    <th><%= sort_link(@search, :status, 'Availale', default_order: :desc) %></th>
  </tr>
 <% if @unlogin %>
  <div class="container-fluid">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
      View On Map
    </button>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-12 modal_body_map">
              <div class="location-map" id="location-map">
                <div style="width: 700px; height: 450px;" id="map_canvas"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>  
    var items = <%=raw @markers.to_json %>
    var latlon = <%=raw @current_latlon.to_json %>
  </script>
  <% @search_items.each do |item| %>
    <tr>
    <td><%= item.item_name %></td>
    <td><%= getCategoryName(item.category_id) %></td>
    <td><%= item.quantity %></td>
    <td><%= item.status %></td>
    <td><%= link_to 'Show', item_path(item) %></td>
    </tr>
  <% end %>
<% else %>
  <% @search_items.each do |item| %>
    <tr>
      <td><%= item.item_name %></td>
      <td><%= getCategoryName(item.category_id) %></td>
      <td><%= item.quantity %></td>
      <td><%= item.status %></td>
      <td><%= link_to 'Show', user_profile_item_path(:id=>item.id) %>|</td>
      <td><%= link_to 'Edit', edit_user_profile_item_path(:id=>item.id) %>|</td>
      <td><%= link_to 'Remove', user_profile_item_path(:id=>item.id),
              method: :delete,
	      data: { confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
<% end %>
</table>


<% if @search_items.empty? %>
<a href= "https://www.amazon.ca/s/field-keywords=<%=@search_words%>"> Try to look for <strong><%=@search_words%></strong> on Amazon</a>
<br>
<% end %>

