<h1>Listing borrow request (internal test)</h1>
 
<p>
  <strong>Item name:</strong>
  <%= @item.item_name %>
</p>
<p>
  <strong>Item quantity:</strong>
  <%= @item.quantity %>
</p>
<p>
  <strong>Return date:</strong>
  <%= @borrow_request.return_date%>
</p>
<p>
  <strong>Borrower:</strong>
  <%= @borrower.username%>
</p>
<p>
  <strong>Message:</strong>
  <%= @borrow_request.request_message%>
</p>

<% if @I_am_borrower %>
  <% if @borrow_request.approval.nil? %>
    <%= link_to 'Accpet', item_borrow_request_path(:approval => true)%> | 
    <%= link_to 'Reject', item_borrow_request_path(:approval => false)%> 
  <% elsif @borrow_request.approval == true %>
    <p> Appected </p>
  <% else %>
    <p> Rejected </p>
  <% end %>

<% else %>
  <%= link_to 'Cancel Request', item_borrow_request_path(@borrow_request),
    method: :delete,
    data: {confirm: 'Are you sure to cancel the request?'} %> 
<br>
<% end %>
<br>

