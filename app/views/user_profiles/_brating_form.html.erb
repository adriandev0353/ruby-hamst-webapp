<div class = "profile_form" >

  <%= form_with model: @user_profile, local: true do |form| %>

    <div class="field form-group">
      <%= form.label :borrow_rating, "Rate your borrow experience (1-5)" %><br>
      <%= form.number_field :borrow_rating, min:1, max:5, default:5, :class => 'form-control'%>
    </div>

    <div class="actions">
      <p>
        <%= form.submit "Complete rating", :class => 'form-control'%>
      </p>
    </div>

  <% end %>
</div>
