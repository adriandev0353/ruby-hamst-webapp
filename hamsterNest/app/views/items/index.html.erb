<div class="container-fluid" style="">
  <h1>Items</h1><br>
  <div class="row">
    <div class='col-1'>
    </div>
    <div class='col-8'>
      <ul class="nav">
        <li class="nav-item">
          <%= sort_link(@search, :item_name, 'Item Name', default_order: :desc, class:"nav-link") %>
        </li>
        <li class="nav-item">
          <%= sort_link(@search, :category_id, 'Category', default_order: :desc, class:"nav-link") %>
        </li>
        <li class="nav-item">
          <%= sort_link(@search, :status, 'Available', default_order: :desc, class:"nav-link") %>
        </li>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class='col-1'>
    </div>
    <div class='col-8'>

      <div class="container">
        <div class="tab-content" id="pills-tabContent">
          <div class="tab-pane show active" id="item-list">
            <% @search_items.each do |item| %>
            <tr>
              <div class="Portfolio">
                <%= link_to item_path(item) do %>
                <%= image_tag item.image.variant(resize: "400x400") %>
                <div class="desc">
                  <ul>
                    <li>
                      <%=item.item_name%>
                    </li>
                    <li>
                      <%=getCategoryName(item.category_id)%>
                    </li>
                  </ul>
                </div>
                <% end %>
              </div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% if @search_items.empty? && !@search_words.empty? %>
  <a href="https://www.amazon.ca/s/field-keywords=<%=@search_words%>"> Try to look for <strong>
      <%=@search_words%></strong> on Amazon</a>
  <br>
  <% end %>
  <hr noshade>
</div>
