<!DOCTYPE html>
<html>
  <head>
    <title>HamsterNest</title>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="top-banner">
      <%= render "application/top_banner" %>
    </div>
    <div id="main-body">
      <%= flash_messages %>
      <%= yield %>
    </div>
    <div id="footer">
       <%= render "application/footer" %>
    </div>
  </body>


</html>
