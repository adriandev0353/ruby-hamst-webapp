<h1>Items</h1>
<body>
<% if !@unlogin%>
  <%= link_to 'New item', new_user_profile_item_path() %>
<% end %>
<table>
  <tr>
     <th>Item Name</th> 
    <th><%= sort_link(@search, :item_name, 'Item Name', default_order: :desc) %></th>
    <th><%= sort_link(@search, :category_id, 'Category', default_order: :desc) %></th>
    <th><%= sort_link(@search, :quantity, 'Quantity', default_order: :desc) %></th>
    <th><%= sort_link(@search, :status, 'Availale', default_order: :desc) %></th>
  </tr>
 <% if @unlogin %>
  <% @search_items.each do |item| %>
    <tr>
    <td><%= item.item_name %></td>
    <td><%= getCategoryName(item.category_id) %></td>
    <td><%= item.quantity %></td>
    <td><%= item.status %></td>
    <td><%= link_to 'Show', item_path(item) %></td>
    </tr>
  <% end %>
<% else %>
  <% @search_items.each do |item| %>
    <tr>
      <td><%= item.item_name %></td>
      <td><%= getCategoryName(item.category_id) %></td>
      <td><%= item.quantity %></td>
      <td><%= item.status %></td>
      <td><%= link_to 'Show', user_profile_item_path(:id=>item.id) %>|</td>
      <td><%= link_to 'Edit', edit_user_profile_item_path(:id=>item.id) %>|</td>
      <td><%= link_to 'Remove', user_profile_item_path(:id=>item.id),
              method: :delete,
	      data: { confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
<% end %>
</table>


<% if @search_items.empty? %>
<a href= "https://www.amazon.ca/s/field-keywords=<%=@search_words%>"> Try to look for <strong><%=@search_words%></strong> on Amazon</a>
<br>
<% end %>

<%= link_to 'Back to Home page', root_path %>
